._warn {
    font-size: 28rpx;
    padding-bottom: 150rpx;
}
.search {
    border-bottom: 1px solid #f0f0f0;
    padding: 15rpx;
    margin: 0;
    width: 100%;
    background-color: #fff;
    position: fixed;
    top: 15rpx;
    z-index: 99;
}
.ipn {
    background-color: #fff;
    padding: 20rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
    box-shadow: 0 2px 5px rgba(110, 110, 110, .5);
    border-radius: 6rpx;
}
.viewsearch {
    position: fixed;
    top: 18rpx;
    right: 30rpx;
    z-index: 999;
}
.top_fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 3;
    height: 90rpx;
    background-color: #fff;
}
.top_block {
    width: 100%;
    height: 95rpx;
}

.block {
    padding: 15rpx;
    margin: 15rpx 15rpx 55rpx 15rpx;
    box-shadow: 0 2px 5px rgba(110, 110, 110, .5);
    padding-bottom: 35rpx;
    position: relative;
}
.li {
    display: flex
}
._l {
    flex: 2;
}
._r {
    flex: 6;
}
.option {
    flex: 2;
}
.loss_l {
    display: inline-block;
    width: 50%;
}

.title {
    margin-top: 35rpx;
    box-shadow: 0px 2px 5px rgba(133, 133, 133, .5);
    background-color: #e3e3e3;
    border-radius: 10rpx;
    padding: 0 10rpx;
    margin-bottom: 20rpx;
    font-weight: 700;
}
.warn {
    background: rgba(255, 165, 0, 0.18) !important;
}
.err {
    background-color: #ffc7c782 !important;
}

.handle {
    font-size: 45rpx;
    font-weight: 700;
    position: absolute;
    right: 20rpx;
    top:  15rpx;
    color: #fff;
    background-color: #7D97F8;
    width: 130rpx;
    height: 250rpx;
    border-radius: 10rpx;
    padding: 40rpx 43rpx;
    box-sizing: border-box;
    box-shadow: 1px 3px 7px rgba(110, 110, 110, .6);
}