<view class="user">
    <nav>
        <view slot="right">
            <input type="text" class="ipn" placeholder="名称" />
            <text class="admin">用户管理</text>
        </view>
    </nav>
    <view class="user">
    
        <view class="userItem" wx:for="{{userdata}}" wx:key="{{index}}">
            <view class="userItem_info">
                <image class='sizeModal-img' mode='aspectFill' src='{{item.avatar}}'></image>
                <text class="li">{{item.name}}</text>
                <text class="li">{{item.regtime}}</text>
            </view>
            <view class="operation">
                <text class="iconfont iconicon-  {{item.isadmin == 2? 'colorstyle': ''}}" data-oid="{{item.oid}}" data-isadmin="{{item.isadmin}}" bind:tap="selectUser"></text>
                <text class="iconfont iconshoucang {{item.ischeck == 2? 'colorstyle': ''}}" data-oid="{{item.oid}}" data-ischeck="{{item.ischeck}}" bind:tap="selectColl"></text>
            </view>
        </view>
    
    </view>
</view>