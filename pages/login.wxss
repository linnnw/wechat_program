.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}
.button-login {
  color: #fff;
  background-color: #2897d8;
  border-radius: 15rpx;
  width: 220rpx;
  height: 90rpx;
}

.userinfo-avatar {
  width: 192rpx;
  height: 192rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

